{
    "name": "alan",
    "displayName": "Alan",
    "description": "",
    "icon": "logo.png",
    "version": "0.4.2",
    "publisher": "Kjerner",
    "repository": {
        "type": "git",
        "url": "https://github.com/Kjerner/AlanForVSCode.git"
    },
    "engines": {
        "vscode": "^1.31.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:alan"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "taskDefinitions": [
            {
                "type": "alan",
                "required": [
                    "task"
                ],
                "properties": {
                    "task": {
                        "type": "string",
                        "description": "The Alan task to customize"
                    }
                }
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "resourceLangId == alan",
                    "command": "alan.tasks.build"
                },
                {
                    "when": "resourceLangId == alan",
                    "command": "alan.tasks.fetch"
                },
                {
                    "when": "resourceLangId == alan && resourceFilename == connections.alan",
                    "command": "alan.tasks.package"
                }
            ],
            "editor/title/context": [
                {
                    "when": "resourceLangId == alan",
                    "command": "alan.tasks.build"
                },
                {
                    "when": "resourceLangId == alan",
                    "command": "alan.tasks.fetch"
                },
                {
                    "when": "resourceLangId == alan && resourceFilename == connections.alan",
                    "command": "alan.tasks.package"
                }
            ],
            "explorer/context": [
                {
                    "when": "resourceLangId == alan",
                    "command": "alan.tasks.build"
                },
                {
                    "when": "resourceLangId == alan",
                    "command": "alan.tasks.fetch"
                },
                {
                    "when": "resourceLangId == alan && resourceFilename == connections.alan",
                    "command": "alan.tasks.package"
                }
            ],
            "commandPalette": [
                {
                    "when": "resourceLangId == alan",
                    "command": "alan.tasks.build"
                },
                {
                    "when": "resourceLangId == alan",
                    "command": "alan.tasks.generateMigration"
                },
                {
                    "when": "resourceLangId == alan",
                    "command": "alan.tasks.package"
                },
                {
                    "when": "resourceLangId == alan",
                    "command": "alan.tasks.fetch"
                },
                {
                    "when": "resourceLangId == alan",
                    "command": "alan.editor.showDefinitions"
                }
            ]
        },
        "commands": [
            {
                "command": "alan.tasks.build",
                "title": "Alan: Build"
            },
            {
                "command": "alan.tasks.generateMigration",
                "title": "Alan: Generate Migration"
            },
            {
                "command": "alan.tasks.package",
                "title": "Alan: Package Deployment"
            },
            {
                "command": "alan.tasks.fetch",
                "title": "Alan: Fetch"
            },
            {
                "command": "alan.editor.showDefinitions",
                "title": "Alan: Show Definitions"
            }
        ],
        "configuration": {
            "properties": {
                "alan-definitions.integrateWithGoToDefinition": {
                    "type": "boolean",
                    "default": true,
                    "description": "Integrate with 'Go to Definition'"
                },
                "alan-definitions.taskShell": {
                    "type": "string",
                    "default": null,
                    "description": "Custom bash shell for executing Alan tasks."
                }
            }
        },
        "languages": [
            {
                "id": "alan",
                "aliases": [
                    "Alan",
                    "alan"
                ],
                "extensions": [
                    "alan",
                    "control",
                    "grammar",
                    "schema"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "alan",
                "scopeName": "source.alan",
                "path": "./syntaxes/alan.tmLanguage"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "alan-explorer",
                    "title": "Alan",
                    "icon": "resources/Alan-inv.svg"
                }
            ]
        },
        "views": {
            "alan-explorer": [
                {
                    "id": "alanTreeView",
                    "name": "Alan Tree",
                    "when": "isAlanFile"
                }
            ]
        },
        "problemMatchers": [
            {
                "name": "alanc-range",
                "owner": "alan",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": [
                    {
                        "regexp": "^(.*alan) from ([0-9]+):([0-9]+) to ([0-9]+):([0-9]+) (error|warning): (.*)",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "endLine": 4,
                        "endColumn": 5,
                        "severity": 6,
                        "message": 7
                    }
                ]
            },
            {
                "name": "alanc-lc",
                "owner": "alan",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": [
                    {
                        "regexp": "^(.*alan) at ([0-9]+):([0-9]+) (error|warning): (.*)",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test",
        "package": "mkdir -p dist && vsce package --out dist/fabric-vscode.vsix"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^10.0.0",
        "mocha": "^5.2.0",
        "typescript": "^3.3.3",
        "vsce": "^1.57.0",
        "vscode": "^1.1.33"
    },
    "dependencies": {
        "nak": "^0.3.3",
        "sanitize-filename": "^1.6.1",
        "strip-ansi-stream": "^1.0.0"
    }
}
